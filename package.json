		"db:migrate": "tsx src/lib/db/migrate.ts",
		"db:studio": "drizzle-kit studio",
		"db:seed": "tsx src/lib/db/seed/seed.ts",
		"db:setup": "npm run db:generate && npm run db:migrate && npm run db:seed",
		"db:update-donations": "tsx src/lib/db/update-donations-table.ts",
		"db:create-invites-table": "tsx src/lib/db/create-user-invites.ts"
